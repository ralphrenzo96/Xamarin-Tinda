<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="tinda.App" xmlns:utilities="clr-namespace:tinda.Utilities;assembly=tinda">
	<Application.Resources>
        <ResourceDictionary>
    		<ControlTemplate x:Key = "DefaultTemplate">
                    <Grid RowSpacing = "0"> 
                        <Grid.RowDefinitions>
                            <RowDefinition Height = "{x:Static utilities:Constants.DEFAULT_TEMPLATE_HEIGHT}"/>
                            <RowDefinition Height = "*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width = "8*"/>
                            <ColumnDefinition Width = "2*"/>
                        </Grid.ColumnDefinitions>
                   
                        <Grid BackgroundColor = "{x:Static utilities:Constants.THEME_COLOR}" Grid.Row = "0" Grid.Column = "0" Grid.ColumnSpan = "3" Padding = "15,0" HorizontalOptions = "FillAndExpand" VerticalOptions = "EndAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width = "Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Row = "0" Grid.ColumnSpan = "3" Spacing = "0" VerticalOptions = "CenterAndExpand">
                                <Image Source = "{TemplateBinding Parent.NavIcon}" HeightRequest = "18"/>
                                <Label  Text = "{TemplateBinding Parent.NavTitle}" HorizontalOptions = "FillAndExpand" VerticalTextAlignment = "Center" HorizontalTextAlignment = "Center" FontSize = "12" TextColor = "White" FontAttributes = "Bold">
                                    <Label.FontFamily>
                                        <OnPlatform x:TypeArguments = "x:String">
                                            <OnPlatform.Android>AvenirLTStd-Roman.otf#Avenir LT Std</OnPlatform.Android>
                                            <OnPlatform.iOS>Avenir</OnPlatform.iOS>
                                        </OnPlatform>
                                    </Label.FontFamily>
                                </Label>
                            </StackLayout>
                            <StackLayout Orientation = "Horizontal" Grid.Row = "0" Grid.ColumnSpan = "3" HorizontalOptions = "FillAndExpand">
                                <Image Source = "{TemplateBinding Parent.NavLeftIcon}" WidthRequest = "20" VerticalOptions = "CenterAndExpand" HorizontalOptions = "StartAndExpand"/>  
                                <Image Source = "{TemplateBinding Parent.NavRightIcon}" WidthRequest = "20" VerticalOptions = "CenterAndExpand" HorizontalOptions = "End"/>  
                            </StackLayout>
                        </Grid>
                        <ContentPresenter Grid.Row = "1" Grid.ColumnSpan = "3"/>
                    </Grid>
                </ControlTemplate>
            </ResourceDictionary>
	</Application.Resources>
</Application>
